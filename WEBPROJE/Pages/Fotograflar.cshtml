@page
@model WebProjeleri2022.Pages.FotograflarModel
@{
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo gallery UI</title>
    <link rel="stylesheet" href="./style.css">
    <script src="./site.js"></script>
</head>
<body>
    <section>
        <div class="ana">
            <div class="header">
                <h1 class="logo">Fotoğraflar</h1>
                <form>
                    <input type="text" placeholder="Araştır">
                    <ion-icon name="search-outline"></ion-icon>
                </form>
            </div>

            <div class="gallery" id="album-view">
                @foreach (var foto in Model.Photos)
                {
                    <div class="item" style="max-width: 20rem; border:none;">
                        <img class="gview" id=@foto.id src=@foto.url>
                        <h3 id=null>@foto.photoName</h3>
                    </div>

                    <span>
                        <span><img class="likebutton" src="https://image.shutterstock.com/image-vector/like-approve-icon-vector-graphics-600w-1620731971.jpg" /></span>
                        <span><img class="downloadbutton" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRUDcTIGCDOMvv0movJ0nWSNiu5eS4ukPtNEQ&usqp=CAU" /></span>
                        <span><img class="sharebutton" src="https://www.svgrepo.com/show/122182/share-button.svg" />  </span>
                    </span>

                    <div class="yorumlar">
                        <div class="yorum-panel">
                            @foreach (var Yorumlar in @Model.photoService.GetCommentsByPhotoId(@foto.id))
                            {
                                <h4>@Yorumlar</h4>
                            }
                        </div>
                        <input type="text" class="yorumla" placeholder="Yorum" required asp-for="comment.comment">
                        <input type="submit" value="Yorumla!">
                    </div>

                }
        </div>

        <a class="load-more" data-img="curated">Daha Fazlası!</a>

        </div>
    </section>
    <section id="album">
    </section>

    <flex>
        <section id="modal-view" class="hidden">
        </section>

        <span class="hidden" id="sidemenu">

        </span>
    </flex>

    <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
</body>


</html>

