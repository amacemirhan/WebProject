<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eğlenceli İçerikler</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("Styles",false)
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor Accessor

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <i class="bi bi-arrow-right"></i>
            <a class="navbar-brand text-light">RANDOM FUN</a>
                <div class="navbar-item nav-link">
                <a class="nav-link text-light" asp-area="" asp-page="/Index">Ana Sayfa</a>
                </div>
            @if (LoginModel.isInside == true)
            {
                
                <div class="navbar-item nav-link">
                <a class="nav-link text-light" asp-area="" asp-page="/Fotograflar">Fotoğraflar</a>
                </div>

                <div class="profil">
                <a class="nav-link text-light" asp-area="" asp-page="/Admin">Profil</a>
                </div>

                <div class="foto-ekle">
                <a class="nav-link text-light" asp-area="" asp-page="/AddPhoto">Fotoğraf Ekle</a>
                </div>

                <div class="cikis-yap">
                <a class="nav-link text-light" asp-area="" asp-page="/Cikis">Çıkış Yap</a>
                </div>
                
            }
            else
            {
                <div class="giris">
                <a class="nav-link text-light" asp-area="" asp-page="/Login">Giriş Yap</a>
                </div>
                <div class="kayit">
                <a class="nav-link text-light" asp-area="" asp-page="/SignIn">Kayıt Ol</a>
                </div>
            }

            <div class="bilgi">
                <a class="nav-link text-light" asp-area="" asp-page="/Bilgi">İçerik</a>
                </div>
            <div class="hakkimizda">
                <a class="nav-link text-light" asp-area="" asp-page="/Hakkimizda">Hakkimizda</a>
            </div>
            

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

          <footer>
        <div class="content">
            <div class="top">
                <div class="logo-details">
                    <span id="footer">RandomFun</span>
                </div>
                <div class="media-icons">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-instagram"></i></a>
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                    <a href="#"><i class="fa fa-youtube"></i></a>
                </div>
            </div>
            <div class="link-boxes">
                <ul class="box">
                    <li class="link_name">Linkler</li>
                    <li><a asp-page="/Index">Ana Sayfa</a></li>
                    <li><a asp-page="/Login">Giriş Yap</a></li>
                    <li><a asp-page="/SignIn">Kayıt Ol</a></li>
                    <li><a asp-page="/Hakkimizda">Hakkımızda</a></li>	
                </ul>
                <ul class="box">
                    <li class="link_name">Hizmetler</li>
                    <li style="color:white">Fotoğraflar</li>
                    <li style="color:white">İçerik</li>
                
                </ul>
        <ul class="box">
                
                </ul>
                <ul class="box">
                    <li class="link_name">İletişim</li>
                    <li><a>symydnnn@gmail.com</a></li>
                    <li><a>diclekilic79@gmail.com</a></li>
                    <li><a>amacemirhan.dev@gmail.com</a></li>
                    <li><a>muhammedmacit@gmail.com</a></li>			
                </ul>
            </div>
        </div>
            <div class="bottom-details">
          <div class="bottom_text">
            <span class="copyright_text">Copyright © 2022 <a href="#">RandomFun.</a></span>
            <span class="policy_terms">
              <a href="#">Privacy policy</a>  
            </span>
          </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
