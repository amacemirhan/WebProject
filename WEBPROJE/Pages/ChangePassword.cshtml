@page
@model WebProjeleri2022.Pages.ChangePasswordModel
@{
}
@section Styles{
    <link rel="stylesheet" href="~/css/changepassword.css">
     <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
}

    <form asp-page-handler="Form" method="post">
        <div class="change-password">
            <div class="form">
                <span class="title">Şifremi Unuttum</span>
                    <div class="input-field">
                        <input type="text" placeholder="Kullanıcı Adı" required asp-for="user.kullaniciAdi">
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" class="password" placeholder="Şifre" required asp-for="user.sifre">
                        <i class="uil uil-lock icon"></i>
                    </div>
                    <div class="input-field button">
                        <input type="submit" value="Şifre Değiştir">
                    </div>
            </div>
        </div>
    </form>